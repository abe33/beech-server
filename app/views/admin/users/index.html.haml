= link_to 'New', new_admin_user_path
%table
  %tr
    - %w(avatar nickname email created_at actions).each do |th|
      %th= th

  - @users.each do |user|
    %tr
      %td= image_tag user.avatar.thumb.url, size: '68x68'
      %td= user.nickname
      %td= user.email
      %td= user.created_at
      %td
        = link_to 'Edit', edit_admin_user_path(user)
        = link_to 'Delete', admin_user_path(user), method: :delete, confirm: 'Are you sure?'

